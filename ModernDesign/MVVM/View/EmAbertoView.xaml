<UserControl x:Class="ModernDesign.MVVM.View.EmAbertoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernDesign.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pedidos Em Aberto"
                   Foreground="White"
                   FontSize="24"
                   HorizontalAlignment="Left"
                   Margin="20,30,0,20"/>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Orders}"
                 Margin="20,0,20,20"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

            <!-- ItemContainerStyle define altura fixa e faz o conteúdo preencher a largura -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <!-- ajuste este valor para a altura desejada -->
                    <Setter Property="Height" Value="80"/>
                    <Setter Property="Margin" Value="0,6,0,6"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Border preenche o ListBoxItem; usar VerticalAlignment/HorizontalAlignment = Stretch -->
                    <Border Padding="10" Background="#222" CornerRadius="6"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding OrderNumber}" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Customer}" Grid.Column="1" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Date, StringFormat=d}" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Status}" Grid.Column="3" HorizontalAlignment="Right" Foreground="LightGreen" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
